<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" 
    android:orientation="vertical">
    <FrameLayout 
        android:id="@+id/road_header_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_drawable_bg">
		<TextView
		    android:id="@+id/road_header_textview"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:padding="10dip"
		    style="@style/HeaderStyle"/>      
    </FrameLayout>
    <ImageView
        android:id="@+id/road_header_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/road_header_container"
        android:background="@drawable/shadow_top"/>
    <ListView
        android:id="@+id/road_listview"
        android:layout_width="match_parent"
        android:layout_below="@id/road_header_shadow"
        android:layout_height="match_parent"/>
</RelativeLayout>
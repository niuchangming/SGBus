<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans_black"
    android:orientation="vertical">
    <Button
        android:id="@+id/map_normal_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/map_mormal"
        android:textSize="18sp"
        android:textColor="@color/menu_text_color"
        android:background="@color/trans_black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@drawable/menu_split_line"/>
    <Button
        android:id="@+id/map_hybrid_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/map_hybrid"
        android:textColor="@color/menu_text_color"
        android:textSize="18sp"
        android:background="@color/trans_black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@drawable/menu_split_line"/>
    <Button
        android:id="@+id/map_terrain_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/map_terrain"
        android:textColor="@color/menu_text_color"
        android:textSize="18sp"
        android:background="@color/trans_black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@drawable/menu_split_line"/>
    <Button
        android:id="@+id/map_satellite_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/map_satellite"
        android:textSize="18sp"
        android:textColor="@color/menu_text_color"
        android:background="@color/trans_black"/>
</LinearLayout>
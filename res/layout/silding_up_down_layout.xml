<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/silding_header_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_bottom"/>
    <FrameLayout
        android:id="@+id/cancel_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/silding_header_shadow"
        android:background="@drawable/inner_view_bg">
        <Button 
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/sildingup_cancel_btn_selector"/>
        <TextView 
            android:id="@+id/roadlist_stop_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BusTimeTextBigStyle"
            android:layout_gravity="center"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/slidingview_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancel_btn_container"
        android:background="@drawable/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dip"
        android:gravity="center_vertical"
        android:layout_below="@id/slidingview_divider"
        android:orientation="horizontal"
        android:background="@drawable/inner_view_bg">
        <LinearLayout
	        android:id="@+id/left_container"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_weight="1"
	        android:orientation="vertical"/>
	    <RelativeLayout
	        android:id="@+id/right_container"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1">
	        <TextView
                android:id="@+id/roadlist_bus_no_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
				android:layout_centerHorizontal="true"
                android:padding="12dip"
                style="@style/BusTextStyle"
                android:textStyle="bold"
                android:background="@drawable/bus_img"/>
            <LinearLayout
                android:id="@+id/roadlist_time_txtview_container"
                android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerVertical="true"
			    android:layout_toLeftOf="@id/roadlist_bus_no_textview"
			    android:layout_margin="5dip"
			    android:orientation="vertical">
			    <TextView
			        android:id="@+id/roadlist_bus_first_time"
			        android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:gravity="right|center_vertical"
				    style="@style/BusTimeTextBigStyle"/>
	            <TextView
			        android:id="@+id/roadlist_bus_sec_time"
			        android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:gravity="right|center_vertical"
				    style="@style/BusTextStyle"/>
            </LinearLayout>
	    </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/roadlist_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/loading"/>
</RelativeLayout>
